%section.panel
  %header.panel-heading
    Editable Table
  .panel-body
    .adv-table.editable-table
      .clearfix
        .btn-group
          %button#editable-question_new.btn.green
            Add New
            %i.fa.fa-plus
        .btn-group.pull-right
          %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
            Tools
            %i.fa.fa-angle-down
          %ul.dropdown-menu.pull-right
            %li
              %a{:href => "#"} Print
            %li
              %a{:href => "#"} Save as PDF
            %li
              %a{:href => "#"} Export to Excel
      .space15
      %table#editable-sample.table.table-striped.table-hover.table-bordered
        %thead
          %tr
            %th Question
            %th Type
            %th Answer
            %th Edit
            %th Delete
        %tbody#table-body
          %tr#qFormRow
            = render partial: 'form', locals: {question: Question.new}
          = render partial: 'question_list', locals:{questions: Question.order('created_at DESC')}
/ page end

:javascript
  jQuery(document).ready(function() {
    EditableTable.init();
  });
  
