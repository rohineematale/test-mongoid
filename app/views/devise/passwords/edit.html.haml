.login-body
  .container
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin"}) do |f|
      %h2.form-signin-heading Change Password
      = devise_error_messages!
      .login-wrap
        = f.hidden_field :reset_password_token
        = f.password_field :password, placeholder: 'New Password', autofocus: true, autocomplete: "off", class: "form-control"
        = f.password_field :password_confirmation, placeholder: 'Confirm New Password', autofocus: true, autocomplete: "off", class: "form-control"
       
        %button.btn.btn-lg.btn-login.btn-block{:type => "submit"} Change my password
        .registration
          Already Registered?
          %a{:href => new_session_path(resource_name)}
            Login
          %br
          Don't have an account yet?
          %a{:href => new_registration_path(resource_name)}
            Create an account