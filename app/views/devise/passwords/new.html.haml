.login-body
  .container
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin"}) do |f|
      = devise_error_messages!
      %h2.form-signin-heading Forgot Password ?
      .login-wrap
        = f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "off", class: "form-control"
        %button.btn.btn-lg.btn-login.btn-block{:type => "submit"} Send reset password link
        .registration
          Already Registered?
          %a{:href => new_session_path(resource_name)}
            Login
          %br
          Don't have an account yet?
          %a{:href => new_registration_path(resource_name)}
            Create an account