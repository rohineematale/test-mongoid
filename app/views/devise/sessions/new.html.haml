.login-body
  .container
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f|
      %h2.form-signin-heading sign in now
      .login-wrap
        = f.email_field :email, autofocus: true, placeholder: "User ID", class: "form-control"
        = f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control"
        %label.checkbox
          %input{:type => "checkbox", :value => "remember-me"}
          Remember me
        %span.pull-right
          %a{"data-toggle" => "modal", :href => "#myModal"} Forgot Password?
        %button.btn.btn-lg.btn-login.btn-block{:type => "submit"} Sign in
        %p or you can sign in via social network
        .login-social-link
          %a.facebook{:href => "index.html"}
            %i.fa.fa-facebook
            Facebook
          %a.twitter{:href => "index.html"}
            %i.fa.fa-twitter
            Twitter
        .registration
          Don't have an account yet?
          %a{:href => new_registration_path(resource_name)}
            Create an account
          %br
          = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
            
      #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
              %h4.modal-title Forgot Password ?
            .modal-body
              %p Enter your e-mail address below to reset your password.
              %input.form-control.placeholder-no-fix{:autocomplete => "off", :name => "email", :placeholder => "Email", :type => "text"}
            .modal-footer
              %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel
              %button.btn.btn-success{:type => "button"} Submit
      / modal