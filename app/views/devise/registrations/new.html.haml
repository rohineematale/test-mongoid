%body.login-body
  .container
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f|
      %h2.form-signin-heading registration now
      = devise_error_messages!
      .login-wrap
        %p Enter your account details below
        = f.text_field :company_name, autofocus: true, class: "form-control", :placeholder => "Company Name"
        = f.email_field :email, autofocus: true, class: "form-control", :placeholder => "Email"
        = f.password_field :password, autocomplete: "off", class: "form-control", :placeholder => "Password"
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :placeholder => "Re-type Password"
        %label.checkbox
          %input{:type => "checkbox", :value => "agree this condition"}
          I agree to the Terms of Service and Privacy Policy
        %button.btn.btn-lg.btn-login.btn-block{:type => "submit"} Submit
        .registration
          Already Registered.
          %a{:href => new_session_path(resource_name)}
            Login


:css
  .has-js .label_check input, .has-js .label_radio input {
    position: static;
    left: -9999px;
  }